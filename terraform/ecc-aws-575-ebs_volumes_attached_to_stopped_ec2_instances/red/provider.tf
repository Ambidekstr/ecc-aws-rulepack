terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4"
    }
  }
}

provider "aws" {
  profile = var.profile
  region  = var.default-region

  default_tags {
    tags = {
      CustodianRule    = "ecc-aws-575-ebs_volumes_attached_to_stopped_ec2_instances"
      ComplianceStatus = "Red"
    }
  }
}
